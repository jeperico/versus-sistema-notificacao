@model MinhaNotificacao.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Criar Conta";
    Layout = "_LayoutWithoutNav";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">
                    <i class="bi bi-person-plus-fill"></i> Criar Conta
                </h2>

                <form asp-action="Register" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="Username" class="form-control" placeholder="usuario123" autocomplete="username" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                <input asp-for="FullName" class="form-control" placeholder="João Silva" autocomplete="name" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com" autocomplete="email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="••••••••" autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">Mínimo de 6 caracteres</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i> Criar Conta
                        </button>
                    </div>
                </form>

                <hr class="my-4" />

                <div class="text-center">
                    <p class="mb-0">Já tem uma conta?</p>
                    <a asp-action="Login" asp-controller="Account" class="btn btn-outline-secondary btn-sm mt-2">
                        <i class="bi bi-box-arrow-in-right"></i> Fazer Login
                    </a>
                </div>
            </div>
        </div>

        <div class="text-center mt-3 text-muted">
            <small>Sistema de Notificações - MinhaNotificacao</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
